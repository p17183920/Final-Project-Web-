<%- include("../partials/header") %>

<h1 style="text-align: center;">Create a New Forum!</h1>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/forums" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Forum description" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/forums">Go Back To Forums</a>
        </div>
    </div>
</div>








