<%- include("../partials/header") %>

<h1 style="text-align: center;">Edit <%= forum.name %>!</h1>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/forums/<%= forum._id %>?_method=PUT" method="POST">  
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= forum.name %>" name="forum[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= forum.image %>" name="forum[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= forum.description %>" name="forum[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/forums">Go Back To Forums</a>
        </div>
    </div>
</div>








<%- include("../partials/footer") %>